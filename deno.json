{
  "app": {
    "name": "Solid macOS",
    "version": "0.1.0",
    "identifier": "org.nativescript.solidmacos",
    "entryPoint": "./native/index.ts",
    "assets": "./assets"
  },
  "tasks": {
    "start": "deno task bundle && deno task run-native",
    "bundle": "deno run -A ./scripts/bundle-solidjs.ts \"src/app.tsx\" \"dist/out.js\"",
    "run-native": "deno run -A --unstable-sloppy-imports ./native/index.ts",
    "build": "deno task bundle && deno run -A ./scripts/create-app-bundle.ts"
  },
  "importMap": "./import_map.json",
  "lint": {
    "include": [
      "jsx",
      "native",
      "scripts",
      "src"
    ],
    "rules": {
      "exclude": [
        "no-explicit-any",
        "no-var",
        "no-empty-interface",
        "ban-types"
      ]
    }
  },
  "fmt": {
    "include": [
      "jsx",
      "native",
      "scripts",
      "src",
      "deno.json",
      "import_map.json",
      "README.md"
    ]
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom"
    ],
    "jsxImportSource": "@jsx",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitOverride": false
  }
}
